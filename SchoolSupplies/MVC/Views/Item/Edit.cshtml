@using BusinessLayer
@using BusinessLayer.Enum
@model Item

@{
    ViewData["Title"] = "Edit Item";
}

<div class="container mt-4">
    <h2 class="text-warning mb-3">Edit Item</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Inventory Number</label>
            <input asp-for="InventoryNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Serial Number</label>
            <input asp-for="SerialNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <select asp-for="Status" class="form-select"
                    asp-items="Html.GetEnumSelectList<ItemStatus>()">
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-warning">Update</button>
        </div>
    </form>
</div>
