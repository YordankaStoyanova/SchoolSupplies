@{
    ViewData["Title"] = "Администрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Tabs {
    <ul class="nav nav-tabs" id="mainTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="hardware-tab" data-bs-toggle="tab" data-bs-target="#hardware" type="button">
                <i class="fas fa-desktop me-2"></i>Хардуер
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="software-tab" data-bs-toggle="tab" data-bs-target="#software" type="button">
                <i class="fas fa-cog me-2"></i>Софтуер
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="administration-tab" data-bs-toggle="tab" data-bs-target="#administration" type="button">
                <i class="fas fa-users-cog me-2"></i>Администрация
            </button>
        </li>
    </ul>
}

<!-- Съдържание на табове -->
<div class="tab-content" id="mainTabsContent">
    <!-- ХАРДУЕР -->
    <div class="tab-pane fade show active" id="hardware" role="tabpanel">
        @await Html.PartialAsync("_HardwarePartial")
    </div>

    <!-- СОФТУЕР -->
    <div class="tab-pane fade" id="software" role="tabpanel">
        @await Html.PartialAsync("_SoftwarePartial")
    </div>

    <!-- АДМИНИСТРАЦИЯ -->
    <div class="tab-pane fade" id="administration" role="tabpanel">
        @await Html.PartialAsync("_AdministrationPartial")
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript код за администраторския панел
    </script>
}
